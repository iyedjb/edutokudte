{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth.uid === $uid"
      }
    },
    "classes": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "chats": {
      "$classId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "videos": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "grades": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "events": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "directMessages": {
      ".read": "false",
      ".write": "false"
    },
    "gradeGroups": {
      "$grade": {
        "messages": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "professorAssignments": {
      ".read": "auth != null",
      "$assignmentId": {
        ".write": "auth != null && auth.token.email === 'sassisawsen2024@gmail.com'"
      }
    },
    "professorConversations": {
      "$conversationId": {
        ".read": "auth != null && (data.child('studentUid').val() === auth.uid || data.child('professorUid').val() === auth.uid)",
        ".write": "auth != null && (auth.token.email === 'sassisawsen2024@gmail.com' || (!data.exists() && newData.child('studentUid').val() === auth.uid && newData.child('professorUid').val() != auth.uid && newData.child('initialMessage').isString() && newData.child('initialMessage').val().length > 0) || (data.exists() && (data.child('professorUid').val() === auth.uid || data.child('studentUid').val() === auth.uid)))",
        "status": {
          ".validate": "newData.val() === 'pending' || newData.val() === 'approved' || newData.val() === 'rejected'",
          ".write": "auth != null && (data.parent().child('professorUid').val() === auth.uid || auth.token.email === 'sassisawsen2024@gmail.com')"
        },
        "approvedAt": {
          ".write": "auth != null && (data.parent().child('professorUid').val() === auth.uid || auth.token.email === 'sassisawsen2024@gmail.com')"
        },
        "studentUid": {
          ".validate": "!data.exists() || newData.val() === data.val()"
        },
        "professorUid": {
          ".validate": "!data.exists() || newData.val() === data.val()"
        },
        "initialMessage": {
          ".validate": "!data.exists() || newData.val() === data.val()"
        },
        "messageCount": {
          ".validate": "newData.isNumber() && (!data.exists() || newData.val() >= data.val())",
          ".write": "auth != null && (data.parent().child('professorUid').val() === auth.uid || auth.token.email === 'sassisawsen2024@gmail.com' || (data.parent().child('studentUid').val() === auth.uid && newData.val() === data.val() + 1))"
        }
      }
    },
    "professorMessages": {
      "$conversationId": {
        ".read": "auth != null && (root.child('professorConversations').child($conversationId).child('studentUid').val() === auth.uid || root.child('professorConversations').child($conversationId).child('professorUid').val() === auth.uid)",
        "$messageId": {
          ".validate": "newData.hasChildren(['senderUid', 'text', 'timestamp', 'isProfessor']) && newData.child('senderUid').val() === auth.uid && ((newData.child('isProfessor').val() === true && root.child('professorConversations').child($conversationId).child('professorUid').val() === auth.uid) || (newData.child('isProfessor').val() === false && root.child('professorConversations').child($conversationId).child('studentUid').val() === auth.uid))",
          ".write": "auth != null && ((root.child('professorConversations').child($conversationId).child('professorUid').val() === auth.uid) || (root.child('professorConversations').child($conversationId).child('studentUid').val() === auth.uid && root.child('professorConversations').child($conversationId).child('status').val() === 'approved'))"
        }
      }
    },
    "notifications": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": ["timestamp"]
      }
    },
    "efeed": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["ts"]
    }
  }
}
